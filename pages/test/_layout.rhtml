// Example of new layout syntax with type-safe slot contract

pub struct LayoutSlots {
pub content: String, // Required - auto-filled with page body
pub title: String, // Required - must be provided
pub description: Option<String>, // Optional - text value
  }

  #[layout]
  pub fn layout(slots: LayoutSlots) {
  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8">
    <title>{slots.title}</title>
    <meta name="description" content="{slots.get(" description").unwrap_or("Testing new layout system")}" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-50">
    <nav class="bg-blue-600 text-white p-4">
      <div class="container mx-auto">
        <a href="/" class="font-bold text-xl">RHTML - New Layout System</a>
      </div>
    </nav>

    <main class="container mx-auto p-4">
      {slots.content}
    </main>

    <footer class="bg-gray-800 text-white p-4 mt-8">
      <div class="container mx-auto text-center">
        Â© 2024 RHTML - Type-Safe Layouts
      </div>
    </footer>
  </body>

  </html>
  }